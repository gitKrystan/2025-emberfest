{
  "extends": "@ember/app-tsconfig",
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"]
  },
  "compilerOptions": {
    "allowJs": true,
    "paths": {
      "#/*": ["./app/*"],
      "#env/*": ["./app/config/environment.ts"],
      "*": ["./types/*"]
    },
    "types": ["ember-source/types", "@embroider/core/virtual", "vite/client"]
  },
  "references": [
    { "path": "../../packages/shared-data/tsconfig.publish.json" },
    { "path": "../../packages/shared-utils/tsconfig.publish.json" }
  ]
}
